<resources>
    <color name="title">#f6f6f6</color>

    <!--Layout-->
    <style name="linerLayoutVertDef">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="linerLayoutLst" parent="linerLayoutVertDef">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="linerLayoutHorDef">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layoutBtn" parent="linerLayoutHorDef">
        <item name="android:gravity">center</item>
    </style>

    <!--Spinner-->
    <style name="spinnerDef">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:prompt">@string/prompt</item>
    </style>

    <!--Button-->
    <style name="oneBtn">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20px</item>
    </style>

    <style name="twoBtn">
        <item name="android:layout_width">158dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!--TextView-->
    <style name="listViewDef">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textViewDef">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="lbl" parent="textViewDef">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="lblTitle" parent="lbl">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/title</item>
    </style>

    <style name="lblLst" parent="lbl">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">200dp</item>
    </style>

    <style name="dscr" parent="textViewDef">
        <item name="android:layout_marginLeft">5px</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="dscrTitle" parent="dscr">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:layout_marginLeft">5px</item>
    </style>

    <style name="title" parent="textViewDef">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--EditView-->
    <style name="edtDef">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10px</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="edtDec" parent="edtDef">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="edtTxt" parent="edtDef">
        <item name="android:layout_width">200dp</item>
        <item name="android:inputType">text</item>
    </style>

    <!--DatePicker-->
    <style name="datePickerDef">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:calendarViewShown">false</item>
    </style>

</resources>